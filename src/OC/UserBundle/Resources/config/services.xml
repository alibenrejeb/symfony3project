<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="security.user.provider.oc.service.class">OC\UserBundle\Security\Core\User\WebserviceUserProvider</parameter>
        <parameter key="oc.service.class">OC\UserBundle\Service\Service</parameter>
    </parameters>

    <services>
        <service id="oc_demo_webservice" class="%oc.service.class%">
        </service>
        <service id="oc_demo_user_provider" class="%security.user.provider.oc.service.class%">
            <argument type="service" id="oc_demo_webservice" />
            <argument type="service" id="doctrine.orm.entity_manager" />
        </service>
        <service id="security.authentication_provider.oc_demo_webservice" class="%security.user.provider.oc.service.class%" abstract="true" public="false">
            <argument type="service" id="oc_demo_webservice" />
            <argument />  <!--User Provider-->
            <argument type="service" id="security.user_checker" />
            <argument /> <!--Provider-shared Key-->
            <argument type="service" id="security.encoder_factory" />
            <argument>%security.authentication.hide_user_not_found%</argument>
        </service>
    </services>
